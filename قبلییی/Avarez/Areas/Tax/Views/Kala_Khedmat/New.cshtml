@using Ext.Net.MVC
@using Hogaf.ExtNet.UX
@using Ext.Net;
@using Ext.Net.Utilities;
@{
    var X = Html.X();
}
<style>
    #fi-button-msg {
        border: 2px solid #ccc;
        padding: 5px 10px;
        background: #eee;
        margin: 5px;
        float: left;
    }
</style>

@(Html.X().Window()
    .Modal(true)
        //.Listeners(li => li.AfterRender.Handler = "LoadNewKala();")
    .Width(470)//.Height(300)
        .Title("کالا/خدمت جدید")
                .ID("NewNewKala")
    .Resizable(false)
    .Closable(true)
    .CloseAction(Ext.Net.CloseAction.Destroy)
    .ButtonAlign(Alignment.Center)
    .Layout(LayoutType.Fit)
    .Buttons(
        X.Button()
            .Text("ذخیره")
            .Icon(Ext.Net.Icon.Disk)
            .Listeners(l =>
            {
                l.Click.Handler = "SaveNewKala();";
            })
            .ItemID("btnSave"),
        X.Button()
            .Text("خروج")
            .Icon(Ext.Net.Icon.BulletCross)
            .ToolTip("کلید میانبر Esc")
                    .OnClientClick("App.NewNewKala.destroy()"))
    .Items(
        X.FormPanel()
            .MarginSpec("10px 5px 10px 5px")
            .Border(false)
          //  .Layout(Ext.Net.LayoutType.VBox)
           .LayoutConfig(new Ext.Net.TableLayoutConfig { Columns = 4 })
                    .Defaults(new { Margin = 2 })
            .Items(
                    X.Hidden().ItemID("fldId"),
                  
                                X.Label("نوع:"), 
                                      X.ComboBox()
                                        .ItemID("CboStatus")
                                    .LabelAlign(Ext.Net.LabelAlign.Top)
                                    .Editable(false)
                                    .TypeAhead(true)
                                    .QueryMode(DataLoadMode.Local)
                                    .ForceSelection(true)
                                    .TriggerAction(TriggerAction.All)
                                    .DisplayField("Name")
                                    .ValueField("ID")
                                    .EmptyText("...")
                                    .Width(160)
                                    .Items(
                                                new ListItem("خدمت", "1"),
                                                new ListItem("کالا", "0")
                                    )
                                            .SelectedItems(new { Value = "1" })
                                    //.AllowBlank(false)
                                    .MsgTarget(Ext.Net.MessageTarget.Side)
                            , X.Label("کد :")
                        , X.TextField()
                            .ItemID("txtCode")
                            .MsgTarget(Ext.Net.MessageTarget.Side)
                                .Width(160)
                                , X.Label("عنوان:")
                            , X.TextField()
                            .ColSpan(3)
                                .ItemID("txtDesc")
                                .AllowBlank(false)
                                .BlankText("لطفا عنوان را وارد کنید.")
                                .MsgTarget(Ext.Net.MessageTarget.Side)
                                .Width(360)
                             
        //, X.Label("توضیحات:")
        //, X.TextArea()
        //    .ItemID("txtDesc")
        //    .LabelAlign(Ext.Net.LabelAlign.Top)
        //    .Width(160)
                )

            )
        )
)

<script type="text/javascript">
    var NewKalaId = 0;
    var ImageId = 0;
    function setDefaultNewKalaType() {
        if ('@ViewBag.Id' == '0') {
            App.NewNewKala.queryById("CboNewKalaType").setValue(App.NewNewKala.queryById("CboNewKalaType").store.getAt(0));
        }
    }
 

    function SaveNewKala() {
        var CboStatus = App.NewNewKala.queryById('CboStatus');
        var txtDesc = App.NewNewKala.queryById('txtDesc');
        var txtCode = App.NewNewKala.queryById('txtCode');

        var er = false;

        if (txtCode.validate() == false) {
            er = true;
        }
        if (txtDesc.validate() == false) {
            er = true;
        }


            if (er == true)
                return;


            var st = false;
            if (CboStatus.getValue() == "1")
                st = true;

            var data = {
                typeKala: st,
                fldCode: txtCode.getValue(),
                fldDescriptionOfID: txtDesc.getValue()
            };

            $.ajax({
                type: "POST",
                url: '/Tax/Kala_Khedmat/Save',
                datatype: "json",
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function (data) {
                    var ic = Ext.MessageBox.INFO;
                    if (data.Er == 1)
                        ic = Ext.MessageBox.ERROR;
                    Ext.MessageBox.show({
                        title: data.MsgTitle,
                        msg: data.Msg,
                        icon: ic,
                        buttons: Ext.MessageBox.OK
                    });
                    App.Kala.queryById('Grid').store.load();
                    if (data.Er == 0)
                        ClearNewKala();
                },
                failure: function (data) {
                    alert(data.data);
                }
            });
    }
    //CboStatus  txtCode  txtDesc
    function ClearNewKala() {
        App.NewNewKala.queryById('CboStatus').setValue("0");
        App.NewNewKala.queryById('txtCode').setValue("");
        App.NewNewKala.queryById('txtDesc').setValue("");
        App.NewNewKala.queryById('fldId').setValue(0);

    }

    function EnterNext() {
        var keyfield = App.NewKalaTab.activeTab.queryById(Ext.getCmp((Ext.Element.getActiveElement()).name).itemId);
        var nextfld = keyfield.nextSibling();
        nextfld.focus();
        nextfld.selectText();
    }
</script>