<div id="RptCollection" dir="rtl">
    @using Kendo.Mvc.UI;
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker-cc.all.min.js")" type="text/javascript"></script>
    <center>
        <br />
        <br />
        <br />
        <table>
            <tr>
                <td align="left">
                    تاریخ شروع:
                </td>
                <td align="right">
                    @Avarez.Helper.winClass.textbox("txtStart")
                </td>
            </tr>
            <tr>
                <td align="left">
                    تاریخ پایان:
                </td>
                <td align="right">
                    @Avarez.Helper.winClass.textbox("txtEnd")
                </td>
            </tr>
            <tr>
                <td align="left">
                    کاربر:
                </td>
                <td align="right">
                    @(Html.Kendo().DropDownList()
                        .Name("cboUser")
                            .OptionLabel("همه کاربران")
                            .DataTextField("fldName")
                            .DataValueField("fldID")
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("GetUsers", "AppReports");
                                });
                            }).HtmlAttributes(new { @style = "display: none;width:169px;" })
                    )
                </td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <br />
                     @Avarez.Helper.winClass.Buttons("Preview", "نمایش", "yes")
                </td>
            </tr>
        </table>
       
    </center>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#Preview').button();
            $('#Preview').click(function () {
                //window.open('@Url.Content("~/AppReports/RptPaid")' + '?SDate=' + $('#txtStart').val() + '&EDate=' + $('#txtEnd').val());
                if (isWinOpen == false) {
                    isWinOpen = true;
                    windowAppend('body', '/Home/PreviewRptPDFBox');
                    var t = '@Url.Content("~/AppReports/RptPaid")' + '?User=' + $("#cboUser").val() + '&SDate=' + $('#txtStart').val() + '&EDate=' + $('#txtEnd').val();
                    $('#pdf').html("<br/><object style='width: 900px;height: 500px;border: 1px solid #ccc;' id='pdfbox' type='application/pdf' data='" + t + "'></object> ");
                }
            });

            $('#txtStart').datepicker({
                onSelect: function (dateText, inst) {
                    $('#txtEnd').datepicker('option', 'minDate', new JalaliDate(inst['selectedYear'], inst['selectedMonth'], inst['selectedDay']));
                },
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true
            });

            $('#txtEnd').datepicker({
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
</div>
