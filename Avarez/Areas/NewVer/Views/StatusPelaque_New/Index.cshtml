@model IEnumerable<Avarez.Models.sp_StatusPlaqueSelect>
@using Ext.Net.MVC;
@{

    var X = Html.X();
}

@(X.Panel()
        //.Listeners(li => li.AfterRender.Handler = "StatusPelaqueMap();")
              .Title("وضعیت پلاک")
                    .ID("StatusPelaque")
    .Closable(true)
    .Border(false)
    .CloseAction(Ext.Net.CloseAction.Destroy)
    .Layout(Ext.Net.LayoutType.Fit)
    .Items(
        X.Panel()
                    .ItemID("PnlGridStatusPelaque")
            .Border(false)
            .Layout(Ext.Net.LayoutType.Fit)
            .Items(
                X.GridPanel()
                    .AutoScroll(true)
                    .TopBar(
                        Html.X().Toolbar()
                            .Items(
                                X.Button()
                                    .Text("جدید")
                                    .Icon(Ext.Net.Icon.Add)
        //.ToolTip("کلید میانبر F8")
                                            .Listeners(li => li.Click.Handler = "NewStatusPelaque();"),
                                X.Button()
                                    .Text("ویرایش")
                                    .Icon(Ext.Net.Icon.Pencil)
        //.ToolTip("کلید میانبر F2")
                                            .Listeners(Li => Li.Click.Handler = "EditStatusPelaque();"),
                                X.Button()
                                    .Text("حذف")
                                    .Icon(Ext.Net.Icon.Delete)
        //.ToolTip("کلید میانبر F9")
                                            .Listeners(de => de.Click.Handler = "DeleteStatusPelaque();")
                                , X.Button().Text("راهنما").Icon(Ext.Net.Icon.Help)
                                .Listeners(de =>
                                    {
                                        de.Click.Handler = "HelpStatusPelaque();";
                                    })
                                    )
                                    )
                            .ItemID("GridStatusPelaque")
                    .BottomBar(X.PagingToolbar())
                    .Store(
                        Html.X().StoreForModel()
                            .Proxy(Html.X().AjaxProxy()
                                .Url(Url.Action("Read"))
                                .Reader(Html.X().JsonReader().Root("data"))
        )
                    .PageSize(20)
                    .RemoteFilter(true)
                    .RemotePaging(true)
                                .Listeners(l => l.DataChanged.Handler = "App.StatusPelaque.queryById('GridStatusPelaque').selModel.refresh();")
    )
                    .View(
                        Html.X().GridView().LoadingText("در حال بارگذاری...").RTL(true)
    )
                    .Plugins(X.FilterHeader().Remote(true))
                    .ColumnModel(
                        Html.X().RowNumbererColumn(),
                              Html.X().Column().DataIndex(Model, m => m.fldID).Text("کد").Hidden(true).Flex(1),
                                    Html.X().Column().DataIndex(Model, m => m.fldName).Text("عنوان").Flex(2),
                               Html.X().Column().DataIndex(Model, m => m.fldDesc).Text("توضیحات").Flex(10).Wrap(true)
    )
                .SelectionModel(
                    Html.X().RowSelectionModel()
                        .Mode(Ext.Net.SelectionMode.Single)
    )

))
)


<script type="text/javascript">

    function StatusPelaqueMap() {
        var k = new Ext.KeyMap(
            document,
            [{
                target: Ext.get('StatusPelaque'),
                scope: this,
                key: [119],
                fn: function (key, event) {
                    if (App.StatusPelaque && App.NewStatusPelaque) {
                        if (App.NewStatusPelaque.active == false)
                            NewStatusPelaque();
                    }
                    else if (App.StatusPelaque && !App.NewStatusPelaque)
                        NewStatusPelaque();
                }
            },
            {
                target: App.StatusPelaque.getTargetEl(),
                scope: this,
                key: [113],
                fn: function (key, event) {
                    if (App.StatusPelaque && App.NewStatusPelaque) {
                        if (App.StatusPelaque.active == false)
                            EditStatusPelaque();
                    }
                    else if (App.StatusPelaque && !App.NewStatusPelaque)
                        EditStatusPelaque();
                }
            },
            {
                target: App.StatusPelaque.getTargetEl(),
                scope: this,
                key: [120],
                fn: function (key, event) {
                    if (App.StatusPelaque && App.NewStatusPelaque) {
                        if (App.NewStatusPelaque.active == false)
                            DeleteStatusPelaque();
                    }
                    else if (App.StatusPelaque && !App.NewStatusPelaque)
                        DeleteStatusPelaque();
                }
            }]
            )
    }
    function NewStatusPelaque() {
        Ext.net.Mask.show({ msg: 'در حال بارگذاری...' });
        Ext.net.DirectMethod.request({
            url: '/NewVer/StatusPelaque_New/New',
            params: {
                id: 0
            },
            success: function () {
                Ext.net.Mask.hide();
            }
        });
    }
    function EditStatusPelaque() {
        var SelectedRow = App.StatusPelaque.queryById('GridStatusPelaque').selModel.getLastSelected();

        if (SelectedRow != null) {
            Ext.net.Mask.show({ msg: 'در حال بارگذاری...' });
            Ext.net.DirectMethod.request({
                url: '/NewVer/StatusPelaque_New/New',
                params: {
                    id: SelectedRow.data.fldID
                },
                success: function () {
                    Ext.net.Mask.hide();
                }
            });
        }
        else {
            Ext.MessageBox.show({
                title: "خطا",
                msg: "لطفا یک سطر را انتخاب نمایید.",
                icon: Ext.MessageBox.ERROR,
                buttons: Ext.MessageBox.OK
            });
        }
    }

    function DeleteStatusPelaque() {
        var SelectedHeaderRow = App.StatusPelaque.queryById('GridStatusPelaque').selModel.getLastSelected();
        if (SelectedHeaderRow != null) {
            Ext.MessageBox.show({
                title: "هشدار",
                msg: "آیا برای حذف مطمئن هستید؟",
                icon: Ext.MessageBox.WARNING,
                buttons: Ext.MessageBox.YESNO,
                fn: function (btn) {
                    if (btn == 'yes') {
                        Ext.net.Mask.show({ msg: 'در حال انجام عملیات...' });
                        Ext.net.DirectMethod.request({
                            url: '/NewVer/StatusPelaque_New/Delete',
                            params: {
                                id: SelectedHeaderRow.data.fldID
                            },
                            success: function (data) {
                                var ic = Ext.MessageBox.INFO;
                                if (data.Er == 1)
                                    ic = Ext.MessageBox.ERROR;
                                Ext.MessageBox.show({
                                    title: data.MsgTitle,
                                    msg: data.Msg,
                                    icon: ic,
                                    buttons: Ext.MessageBox.OK
                                });
                                App.StatusPelaque.queryById('GridStatusPelaque').store.load();
                                Ext.net.Mask.hide();
                            }
                        });
                    }
                }
            });
        }
        else {
            Ext.MessageBox.show({
                title: "خطا",
                msg: "لطفا یک سطر را انتخاب نمایید.",
                icon: Ext.MessageBox.ERROR,
                buttons: Ext.MessageBox.OK
            });
        }
    }
    function HelpStatusPelaque() {
        Ext.net.Mask.show({ msg: 'در حال بارگذاری...' });
        Ext.net.DirectMethod.request({
            url: '/NewVer/StatusPelaque_New/Help',
            success: function (data) {
                Ext.net.Mask.hide();
            }
        });
    }
</script>


