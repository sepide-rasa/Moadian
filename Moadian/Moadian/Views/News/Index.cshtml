                    </td>
                    <td>
                       
                    </td>
                </tr>
                <tr>
                    <td align="left">
                        <span style="color: Red;">*</span>شهرداری:
                    </td>
                    <td>
                        @Html.TextBox("cboMun")
                        <span id="lblMunError" style="color: Red;"></span>

                    </td>
                    <td>
                       
                    </td>
                </tr>
                <tr>
                    <td align="left">
                        @Html.Hidden("fldId")
                        <span style="color: Red;">*</span>عنوان:
                    </td>
                    <td>
                        @Avarez.Helper.winClass.textbox("txtSubject")
