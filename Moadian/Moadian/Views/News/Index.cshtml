@using Kendo.Mvc.UI;
<div class="modal" id="News">
@{
    Avarez.Models.cartaxEntities car = new Avarez.Models.cartaxEntities();
    var q = car.sp_StateSelect("", "", 0, Convert.ToInt32(Session["UserId"]), Session["UserPass"].ToString()).ToList();
}
    <script src="@Url.Content("~/Content/Base.js")" type="text/javascript"></script>    
    <div>
     <a href="@Url.Content("~/Helps/تعیین اخبار.htm")" target="_blank" id="Help" title="راهنما" style="background-image:url('/Content/images/1381415123_help.png');background-repeat: no-repeat;height: 20px;float: left;top: 10px;left: 10px;"></a>    
        <br />
        <center>
            <table>
                <tr>
                    <td align="left">
                        <span style="color: Red;"></span>استان:
                    </td>
                    <td>
                        @Html.DropDownList("cboState", new SelectList(q,"",""))
