                    </td>
                    <td>
                       
                    </td>
                </tr>
                <tr>
                    <td align="left">
                        <span style="color: Red;"></span>متن:
                    </td>
                    <td>
                        @Avarez.Helper.winClass.textArea("txtMemo", 4, 30)
                    </td>
                    <td>
                       
                    </td>
                </tr> 
                <tr>
                    <td align="left">
                        <span style="color: Red;">*</span>وضعیت:
                    </td>
                    <td>
                                @(Html.Kendo().DropDownList()
                                  .Name("cboStatus")
                                  .DataTextField("Text")
                                  .DataValueField("Value")
                                  .BindTo(new List<SelectListItem>() {

                                      new SelectListItem() {
                                          Text = "فعال",
                                          Value = "true"
                                      },
